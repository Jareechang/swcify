{
  "extends": "@shopify/typescript-configs/library",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./build/ts",
    "pretty": true,
    "jsx": "react",
    "strict": true,
    "importHelpers": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "emitDeclarationOnly": true
  },
  "include": ["js/index.ts", "**/*.test.ts", "**/*.test.ts"]
}
